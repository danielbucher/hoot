<div class="container">
  <div class="row">
    <div  class="col-xs-3">
      <% if user_signed_in? %>
        <%= render partial: 'users/user_info', locals: { user: current_user } %>
      <% else %>
        <%= render partial: 'shared/sign_in' %>
      <% end %>
    </div>

    <div  class="col-xs-6 home-content">
      <div class="content-title">
        <h3><%= "Results for \##{params[:hashtag]}"%></h3><br/>
      </div>

      <% if @posts.empty? %>
        <%= render 'home/no_hoots' %>
      <% else %>
        <div id="home-hoots">
          <%= render @posts %>
        </div>
      <% end %>
    </div>

    <div class="col-xs-3">
      <%= render partial: 'shared/info' %>
    </div>
  </div>
</div>
